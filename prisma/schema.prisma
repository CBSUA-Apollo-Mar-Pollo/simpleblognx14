// }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@unique([provider, providerAccountId])
}

model User {
  id               String    @id @default(cuid())
  email            String?   @unique
  name             String?
  image            String?
  emailVerified    DateTime?
  password         String?
  onboarded        Boolean   @default(false)
  onlineStatus     Boolean   @default(false)
  lastStatusChange DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  accounts     Account[]
  userProfiles UserProfile[]
}

model UserProfile {
  id              String    @id @default(cuid())
  type            String    @default("user")
  name            String?
  handleName      String?
  bio             String?
  image           String?
  backgroundImage String?
  birthdate       DateTime?
  categories      Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  pageDetails   PageDetails? @relation(fields: [pageDetailsId], references: [id])
  pageDetailsId String?

  posts              Post[]
  shortsv            Shortsv[]
  comments           Comment[]
  searchHistories    SearchHistory[]
  userBeingRequested FriendList[]       @relation("UserBeingRequested")
  friendRequester    FriendList[]       @relation("FriendRequester")
  notifications      Notification[]
  userOne            Conversation[]     @relation("UserOne")
  userTwo            Conversation[]     @relation("UserTwo")
  messages           Message[]
  subscriptions      Subscription[]
  votes              Vote[]
  shortsvVotes       ShortsvVote[]
  commentVotes       CommentVote[]
  stories            Story[]
  profileAboutInfo   ProfileAboutInfo[]
  createdCommunities Community[]        @relation("CreatedBy")
  userInterests      UserInterest[]

  @@map("user_profiles")
}

model Post {
  id                  String    @id @default(cuid())
  description         String?
  image               Json?
  video               Json?
  userStatus          String?
  textBackgroundStyle Json?
  trashed             Boolean   @default(false)
  trashedAt           DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  author   UserProfile @relation(fields: [authorId], references: [id])
  authorId String

  sharedPostId String?
  sharedPost   Post?   @relation("SharedPost", fields: [sharedPostId], references: [id])
  shares       Post[]  @relation("SharedPost")

  community   Community? @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String?

  comments Comment[]
  votes    Vote[]

  @@index([authorId])
  @@index([communityId])
  @@index([createdAt])
  @@index([authorId, createdAt])
  @@index([communityId, createdAt])
  @@index([sharedPostId])
}

model Shortsv {
  id          String   @id @default(cuid())
  description String?
  videoUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author   UserProfile @relation(fields: [authorId], references: [id])
  authorId String

  community   Community? @relation(fields: [communityId], references: [id])
  communityId String?

  comments     Comment[]
  shortsvVotes ShortsvVote[]

  @@index([authorId])
  @@index([communityId])
  @@index([createdAt])
}

model Comment {
  id              String   @id @default(cuid())
  text            String?
  index           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  commentImageUrl String?

  author   UserProfile @relation(fields: [authorId], references: [id])
  authorId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  replyToId String?
  replyTo   Comment?  @relation("ReplyTo", fields: [replyToId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("ReplyTo")

  Shortsv   Shortsv? @relation(fields: [shortsvId], references: [id], onDelete: Cascade)
  shortsvId String?

  commentVotes CommentVote[]

  @@index([postId])
  @@index([authorId])
  @@index([replyToId])
  @@index([shortsvId])
  @@index([postId, createdAt])
}

model verificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, token])
}

model passwordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, token])
}

model SearchHistory {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user   UserProfile @relation(fields: [userId], references: [id])
  userId String

  @@index([userId])
  @@index([createdAt])
}

model FriendList {
  id                String   @id @default(cuid())
  isRequestAccepted String   @default("false")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())

  user   UserProfile @relation("UserBeingRequested", fields: [userId], references: [id])
  userId String

  requesterUser   UserProfile @relation("FriendRequester", fields: [requesterUserId], references: [id])
  requesterUserId String

  @@index([userId])
  @@index([requesterUserId])
}

model Notification {
  id           String   @id @default(cuid())
  text         String
  isMarkAsRead String   @default("false")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  user   UserProfile @relation(fields: [userId], references: [id])
  userId String

  @@index([userId])
  @@index([userId, isMarkAsRead])
  @@index([userId, createdAt])
  @@index([userId, createdAt, isMarkAsRead])
}

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  userOne   UserProfile @relation("UserOne", fields: [userOneId], references: [id], onDelete: Cascade)
  userOneId String

  userTwo   UserProfile @relation("UserTwo", fields: [userTwoId], references: [id], onDelete: Cascade)
  userTwoId String

  messages Message[]

  @@unique([userOneId, userTwoId])
  @@index([userOneId])
  @@index([userTwoId])
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.Text
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String

  @@index([userId])
  @@index([conversationId])
  @@index([conversationId, createdAt])
}

model Community {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  banner      String?
  icon        String?
  topics      Json
  accessType  String
  visibility  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator   UserProfile? @relation("CreatedBy", fields: [creatorId], references: [id])
  creatorId String?

  posts   Post[]
  members Subscription[]
  shortsv Shortsv[]

  @@index([name])
  @@index([createdAt])
}

model Subscription {
  user   UserProfile @relation(fields: [userId], references: [id])
  userId String

  community   Community @relation(fields: [communityId], references: [id])
  communityId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, communityId])
  @@index([userId])
  @@index([communityId])
}

enum VoteType {
  UP
  DOWN
}

model Vote {
  id        String   @id @default(cuid())
  type      VoteType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   Post?  @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@index([postId, type])
}

model ShortsvVote {
  id        String   @id @default(cuid())
  type      VoteType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  shortsv   Shortsv @relation(fields: [shortsvId], references: [id], onDelete: Cascade)
  shortsvId String

  @@unique([userId, shortsvId])
  @@index([userId])
  @@index([shortsvId])
}

model CommentVote {
  id        String   @id @default(cuid())
  type      VoteType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String

  @@unique([userId, commentId])
  @@index([userId])
  @@index([commentId])
}

model Story {
  id        String   @id @default(cuid())
  image     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   UserProfile @relation(fields: [authorId], references: [id])
  authorId String

  @@index([authorId])
  @@index([createdAt])
}

model PageDetails {
  id            String   @id @default(cuid())
  website       String?
  phone         String?
  email         String?
  businessHours Json?
  photoUrl      String?
  coverPhotoUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?   @unique

  creator UserProfile[]
}

model Location {
  id        String   @id @default(cuid())
  address   String?
  city      String?
  zipCode   String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pageDetails PageDetails?
}

model ProfileAboutInfo {
  id             String   @id @default(cuid())
  phonenumber    Json?
  relationstatus String?
  hometown       String?
  currentcity    String?
  college        Json?
  highschool     Json?
  workplace      Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user   UserProfile @relation(fields: [userId], references: [id])
  userId String

  profileAboutInfoVisibility ProfileAboutInfoVisibility?
}

model ProfileAboutInfoVisibility {
  id             String  @id @default(cuid())
  workplace      Boolean @default(false)
  highschool     Boolean @default(false)
  college        Boolean @default(false)
  hometown       Boolean @default(false)
  currentcity    Boolean @default(false)
  relationstatus Boolean @default(false)

  profileAboutInfo   ProfileAboutInfo? @relation(fields: [profileAboutInfoId], references: [id])
  profileAboutInfoId String?           @unique
}

model FriendRequestNotification {
  id              String   @id @default(cuid())
  userId          String
  requesterUserId String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())

  @@index([userId, requesterUserId], name: "unique_user_requester")
}

model Interest {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users UserInterest[]
}

model UserInterest {
  user   UserProfile @relation(fields: [userId], references: [id])
  userId String

  interest   Interest @relation(fields: [interestId], references: [id])
  interestId String

  createdAt DateTime @default(now())

  @@id([userId, interestId])
  @@index([userId])
  @@index([interestId])
}
